# Environment variables for OneLastAI Global Platform
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=onelastai-super-secret-key-2025-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/onelastai_platform
REDIS_URL=redis://localhost:6379/0

# Keycloak Authentication
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_REALM=onelastai
KEYCLOAK_CLIENT_ID=ai-platform
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret

# Stripe Payment Gateway
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# PayPal Payment Gateway
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# LemonSqueezy Payment Gateway
LEMONSQUEEZY_API_KEY=your_lemonsqueezy_api_key
LEMONSQUEEZY_STORE_ID=your_store_id
LEMONSQUEEZY_WEBHOOK_SECRET=your_lemonsqueezy_webhook_secret

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Production Settings (uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=False
# DATABASE_URL=postgresql://prod_user:prod_password@prod_host/onelastai_platform